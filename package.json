{
  "name": "ioserver",
  "version": "2.0.2",
  "description": "Damn simple Fastify & Socket.io server framework with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node",
    "dev:chat": "ts-node examples/chat-app/app.ts",
    "dev:simple": "ts-node examples/simple-example.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs:build": "cd docs && make html",
    "docs:api": "typedoc --options typedoc.json",
    "docs:serve": "cd docs/build/html && python -m http.server 8000",
    "gpr-setup": "node scripts/gpr.js",
    "gpr-restore": "node scripts/gpr-restore.js",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "socket.io",
    "fastify",
    "typescript",
    "websocket",
    "server",
    "framework",
    "real-time"
  ],
  "author": "Ben Mz <0x42en@users.noreply.github.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/x42en/IOServer.git"
  },
  "bugs": {
    "url": "https://github.com/x42en/IOServer/issues"
  },
  "homepage": "https://github.com/x42en/IOServer#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/sensible": "^6.0.3",
    "fastify": "^5.3.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}